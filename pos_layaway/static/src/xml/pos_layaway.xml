<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="AddLayAwayButton">
        <div class='control-button'>
            <i class="fa fa-money" aria-hidden="true"/> Layaway
        </div>
    </t>
    <t t-extend="OrderSelectorWidget">
        <t t-jquery="span#orders_list" t-operation="replace">
	        <span class="order-button square orders-list">
	            Orders / Layaways
	        </span>
        </t>
    </t>
    
    <t t-extend="OrderLine">
        <t t-jquery="tr.order-line" t-operation="append">
            <t t-if = "order.state == 'layaway'">
            		<td class="layaway-button" t-att-data-id='order.id'><span class = "button" ><i class="fa fa-money fa-2x" aria-hidden="true"></i></span></td>
            </t>
            <t t-if = "order.state != 'layaway'">
            		<td></td>
            </t>            
        </t>
    </t>    
</templates>