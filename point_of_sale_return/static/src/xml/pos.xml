<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="OrderLine">
        <t t-jquery="tr.order-line" t-operation="append">
        		<td class="return-product" t-att-data-id='order.id'><span class = "button" ><i class="fa fa-undo fa-2x" aria-hidden="true"></i></span></td>
        </t>
    </t>
    <t t-extend="OldOrdersWidget">
  		<t t-jquery="table.client-list>thead>tr" t-operation="append">
 			<th></th>
  		</t>
    </t>
    <t t-name="PointOfSaleReturnLine">
    		<tr>
    			<td><t t-esc="widget.data.get('product_id')" /></td>
    			<td><t t-esc="widget.data.get('qty')" /></td>
    			<td><t t-esc="widget.data.get('price_unit')" /></td>
    			<td><t t-esc="widget.data.get('discount')" /></td>
    			<td><t t-esc="widget.data.get('subtotal')" /></td>
    			<td><input id = "return_qty" type="number" step="0.01" min="0" oninput="validity.valid||(value='');" style = "width:50%;"/></td>
    			<td><input id = "amt_return_qty" type="number" readonly="1" step="0.01" style = "width:50%;"/></td>
    		</tr>
    </t>
    <t t-name="PointOfSaleReturnTotalLine">
    		<tr>
    			<td></td>
    			<td></td>
    			<td></td>
    			<td></td>
    			<td></td>
    			<td><t t-esc='name' /></td>
    			<td id ='val' ><t t-esc= 'val || 0.00' /></td>
    		</tr>
    </t>    
    <t t-name="PointOfSaleReturn">
        <div class="modal-dialog">
            <div class="popup popup-alert" style="height:80% !important;width:80% !important;" >
                <div class="button return">
                    Return
                </div>                                
                <div class="button cancel">
                    Cancel
                </div>                
                <p class="title"><t t-esc=" widget.options.title || 'Alert' " /></p>
                <div style="overflow-y:scroll;height:inherit;" >
					<table class = "table table-condensed">
						<thead>
							<tr>
								<th>Product</th>
								<th>Quantity</th>
								<th>Unit Price</th>
								<th>Discount (%)</th>
								<th>Total</th>
								<th>Return Quantity</th>
								<th>Return Amount</th>
							</tr>
						</thead>
						<tbody>
							
						</tbody>
					</table> 
				</div>               
            </div>
        </div>    
    </t>    
</templates>   